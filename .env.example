# Tomagotree Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# =============================================================================
# SUPABASE CONFIGURATION (Public - Safe to expose in browser)
# =============================================================================
# These values are safe to expose because they're protected by Row Level Security (RLS)
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-anon-public-key-here

# =============================================================================
# SUPABASE ADMIN (Private - NEVER expose or commit)
# =============================================================================
# Only needed for backend/admin operations. DO NOT use in frontend code!
# Keep this ONLY in .env.local (never commit)

# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# DATABASE (Private - Optional, for direct DB access)
# =============================================================================
# Only needed if you want to connect tools directly to Postgres
# Get from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/database

# SUPABASE_DB_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# =============================================================================
# APPLICATION SETTINGS (Public)
# =============================================================================

VITE_APP_NAME=Tomagotree
VITE_APP_DESCRIPTION="Fight climate change one tree at a time"

# Durham, NC coordinates (default map center)
VITE_DEFAULT_LATITUDE=35.9940
VITE_DEFAULT_LONGITUDE=-78.8986

# =============================================================================
# MAP CONFIGURATION (Public)
# =============================================================================
# Default: OpenStreetMap (free, no API key needed)
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
VITE_MAP_ATTRIBUTION="&copy; OpenStreetMap contributors"

# If you upgrade to Mapbox (better styling, need API key):
# VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-token-here

# =============================================================================
# EXTERNAL APIs (Keys should be in .env.local only)
# =============================================================================

# Weather/Heat Map API (when implemented)
# VITE_WEATHER_API_KEY=your-weather-api-key
# VITE_WEATHER_API_URL=https://api.weatherapi.com/v1

# Image Upload (if not using Supabase Storage)
# VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
# VITE_CLOUDINARY_UPLOAD_PRESET=your-preset

# =============================================================================
# FEATURE FLAGS (Public - Control what features are visible)
# =============================================================================

VITE_ENABLE_PHOTO_UPLOAD=false
VITE_ENABLE_NEIGHBORHOODS=false
VITE_ENABLE_HEAT_MAP=false
VITE_ENABLE_NOTIFICATIONS=false
